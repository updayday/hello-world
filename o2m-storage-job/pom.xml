<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.gome</groupId>
	<artifactId>o2m-storage-job</artifactId>
	<packaging>war</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<name>o2m-storage-job Maven Webapp</name>
	<url>http://maven.apache.org</url>

	<properties>
		<o2mParana.version>2.2.0.10-SNAPSHOT</o2mParana.version>
		<o2mItem.version>1.0-SNAPSHOT</o2mItem.version>
		<o2m.dev.version>1.0.0.300-SNAPSHOT</o2m.dev.version>
		<o2m.prd.version>1.0.0-SNAPSHOT</o2m.prd.version>
	</properties>

	<dependencies>
	<dependency>
	    <groupId>org.apache.commons</groupId>
	    <artifactId>commons-lang3</artifactId>
	    <version>3.2.1</version>
	</dependency>
		<dependency>
			<groupId>com.gome.o2m</groupId>
			<artifactId>o2m-api-common</artifactId>
			<version>${o2m-api-version}</version>
		</dependency>
		<dependency>
			<groupId>com.gome</groupId>
			<artifactId>o2m-cache-common</artifactId>
			<version>${o2m-api-version}</version>
		</dependency>
		<dependency>
			<groupId>com.gome.o2m</groupId>
			<artifactId>o2m-common</artifactId>
			<version>${o2m-api-version}</version>
			<exclusions>
				<exclusion>
						<groupId>quartz</groupId>
						<artifactId>quartz</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.gome.o2m</groupId>
			<artifactId>o2m-dc-api</artifactId>
			<version>${o2m-api-version}</version>
		</dependency>
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>5.1.10</version>
		</dependency>
		<dependency>
			<groupId>org.quartz-scheduler</groupId>
			<artifactId>quartz</artifactId>
			<version>2.1.1</version>
		</dependency>
		<dependency>
			<groupId>org.aspectj</groupId>
			<artifactId>aspectjweaver</artifactId>
			<version>1.7.4</version>
		</dependency>
		<!-- dubbo start -->
		<dependency>
			<groupId>org.apache.zookeeper</groupId>
			<artifactId>zookeeper</artifactId>
			<version>3.4.6</version>
		</dependency>
		<dependency>
			<groupId>com.alibaba</groupId>
			<artifactId>dubbo</artifactId>
			<version>2.5.3</version>
			<exclusions>
				<exclusion>
					<artifactId>spring</artifactId>
					<groupId>org.springframework</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.101tec</groupId>
			<artifactId>zkclient</artifactId>
			<version>0.4</version>
		</dependency>
		<!-- dubbo end -->
		<!-- druid start (数据库连接池) -->
		<dependency>
			<groupId>com.alibaba</groupId>
			<artifactId>druid</artifactId>
			<version>1.0.13</version>
		</dependency>
		<!-- druid end -->
	</dependencies>
	<repositories>
		<repository>
			<id>o2m</id>
			<url>http://10.128.11.68:8081/nexus/content/groups/public/</url>
		</repository>
		<repository>
			<id>terminus</id>
			<url>http://repo.aixforce.com/content/groups/public/</url>
		</repository>
	</repositories>
	<profiles>
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<o2m-api-version>${o2m.dev.version}</o2m-api-version>
			</properties>
			<build>
				<filters>
					<filter>src/main/resources/filter/dev.properties</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>test300</id>
			<properties>
				<o2m-api-version>${o2m.dev.version}</o2m-api-version>
			</properties>
			<build>
				<filters>
					<filter>src/main/resources/filter/test300.properties</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>test500</id>
			<properties>
				<o2m-api-version>${o2m.prd.version}</o2m-api-version>
			</properties>
			<build>
				<filters>
					<filter>src/main/resources/filter/test500.properties</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>test700</id>
			<properties>
				<o2m-api-version>${o2m.prd.version}</o2m-api-version>
			</properties>
			<build>
				<filters>
					<filter>src/main/resources/filter/test700.properties</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>prd800</id>
			<properties>
				<o2m-api-version>${o2m.prd.version}</o2m-api-version>
			</properties>
			<build>
				<filters>
					<filter>/opt/codeconf/prd800-ic-job.properties</filter>
				</filters>
			</build>
		</profile>
	</profiles>
	<build>
		<finalName>o2m-storage-job</finalName>
		<defaultGoal>compile</defaultGoal>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<excludes>
					<exclude>filter/*</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>o2m-config.properties</include>
				</includes>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.mybatis.generator</groupId>
				<artifactId>mybatis-generator-maven-plugin</artifactId>
				<version>1.3.1</version>
				<configuration>
					<verbose>true</verbose>
					<overwrite>true</overwrite>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.7</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>3.0</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<!-- 打war包插件 -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
			</plugin>
			<plugin>
				<!-- 运行mvn test时执行测试的插件 -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.11</version>
				<configuration>
					<argLine>-Dfile.encoding=UTF-8</argLine>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
